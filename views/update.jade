extends navbar

block content
  form(method="POST")
        p Name:
              input(type="text",class="form-control",name="name",value="#{posts.name}")
        p Email:
              input(type="text",class="form-control",name="email",value="#{posts.email}")
        p Medicine:
              input(type="text",class="form-control",name="medicine",value="#{posts.medicine}")
        p Time:
              input(type="text",class="form-control",name="time",value="#{posts.time}")
        p Address:
              input(type="text",class="form-control",name="address",value="#{posts.address}")
        p Mobile No.:
              input(type="text",class="form-control",name="mobile",value="#{posts.mobile}")
        p Doctor Precription:
              input(type="text",class="form-control",name="doctor",value="#{posts.doctor}")
        p: button(type="submit",class="btn btn-default") Update
