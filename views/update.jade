extends navbar

block content
  form(method="POST")
        p name:
              input(type="text",class="form-control",name="name",value="#{posts.name}")
        p email:
              input(type="text",class="form-control",name="email",value="#{posts.email}")
        p medicine:
              input(type="text",class="form-control",name="medicine",value="#{posts.medicine}")
        p time:
              input(type="text",class="form-control",name="time",value="#{posts.time}")
        p: button(type="submit",class="btn btn-default") Update
